extends layout

block content
    .container
        .row
            if message.length
                .alert.alert-danger
                    a(href="#" class="close" data-dismiss="alert" aria-label="close" title="close") ×
                    strong=message
            .col-md-offset-3.col-md-6
                .row
                    .col-md-12
                        .form
                            form.form-horizontal(method="POST")
                                .form-group
                                    label.col-sm-2.control-label(for="inputEmail") Логин
                                    .col-sm-10
                                        input#inputEmail.form-control(type='text', placeholder='Введите логин', name="username")
                                .form-group.help
                                    label.col-sm-2.control-label(for="inputPassword") Пароль
                                    .col-sm-10
                                        input#inputPassword.form-control(type='password', placeholder='Ведите пароль', name="password")
                                        button.btn.btn-default.login(type='submit') ВХОД
